package com.test.question;

import java.util.Scanner;

public class Q089 {

	public static void main(String[] args) {
		
		String txt = "";
		String txt2 = "";
		int count = 0;
		
		String[] ban = {"바보", "멍청이"};
		
		Scanner scan = new Scanner(System.in);
		System.out.print("입력: ");
		txt = scan.nextLine();
		
			for(int i=0; i<ban.length; i++) {
					
				if(txt.indexOf(ban[i])>-1) {
				txt = txt.replace(ban[i], masking(ban[i]));
					count++;}
				
			}
			System.out.printf("금지어를 %d회 마스킹했습니다.",count);
			
			System.out.println(txt.indexOf("바보",-1));	
		}

	private static String masking(String word) {
		
		String result = "";
		
		for(int i =0; i<word.length(); i++) {
			result += "*";
		}
	return result;
	
	
	}
		
		
		
		
		
	}



