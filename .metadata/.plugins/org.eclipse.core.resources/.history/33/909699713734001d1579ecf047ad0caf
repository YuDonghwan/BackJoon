package com.test.question;

import java.util.Scanner;

public class Q007 {

	public static void main(String[] args) {

		char small = 0;
		char upper = 0;
		char c = 0;
		
		Scanner scan = new Scanner(System.in);
		
		System.out.print("문자 입력: ");
		
		small = (char)scan.nextInt();
		upper = (char)(small - 32);
		
		System.out.printf("소문자 '%c'의 대문자는 '%c'입니다.", small, upper);
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}

















/*
		 
		 1. 스캐너를 생성한다.
		2. 사용할 변수를 선언한다.
		3. 라벨을 출력한다.
		4. 영문 소문자를 입력받는다.
		5. 연산을 한다.
		6. 결과를 출력한다.
		Scanner scan=new Scanner(System.in);
		char code =0;
		char result=0;
		
