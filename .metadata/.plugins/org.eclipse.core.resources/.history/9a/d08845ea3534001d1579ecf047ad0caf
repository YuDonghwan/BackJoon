package com.test.question;

import java.util.Scanner;

public class Q006 {

	public static void main(String[] args) {

		int amount = 0;
		double tax = 0;
		
		Scanner scan = new Scanner(System.in);
		
		System.out.print("한달 수입 금액(원): ");
		
		amount = scan.nextInt();
		tax = amount * 0.033;
		
		System.out.printf("세후 금액(원): %,d원\n세금(원): %,0f원", amount, tax);
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}

/*
		1. 스캐너를 생성한다.
		2. 사용할 변수를 선언한다.
		3. 라벨을 출력한다.
		4. 수입금액을 입력받는다.
		5. 연산을 한다.
		6. 결과를 출력한다.
		Scanner scan=new Scanner(System.in);
		
		System.out.println("한달 수입 금액(원): ");
		double income =scan.nextDouble();
		double taxB =income*0.033;
		double taxA =income-taxB;
		
		System.out.printf("세후 금액(원): %,.0f원\n",taxA);
		System.out.printf("세금(원):%,.0f원\n",taxB );
 */